<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title != 'undefined' ? title : 'Your Website' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body >

  <% if (typeof ifAdminIsLoggedIn === 'undefined') { %>
    <% var ifAdminIsLoggedIn = false; %>
  <% } %>
  <!-- Common Header -->
  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      
        <a class="navbar-brand" href="#">My E-commerce</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <!-- Home Button -->
            <li class="nav-item me-2 mt-md-0 mt-3">
              <a class="nav-link btn" href="/">Home</a>
            </li>
            <!-- Admin Home -->
            <li class="nav-item me-2 mt-md-0 mt-3">
              <a class="nav-link btn" href="/admin">Admin Home</a>
            </li>
            <!-- Conditional Buttons -->
            <% if (ifAdminIsLoggedIn) { %>
              <li class="nav-item me-2 mt-md-0 mt-3">
                <a class="nav-link btn" href="/admin/logout">Logout</a>
              </li>
            <% } else { %>
              <li class="nav-item me-2 mt-md-0 mt-3">
                <a class="nav-link btn" href="/admin/register">Register</a>
              </li>
              <li class="nav-item me-2 mt-md-0 mt-3">
                <a class="nav-link btn" href="/admin/login-admin">Sign In</a>
              </li>
            <% } %>
          </ul>
        </div>
      
    </nav>
  </header>
  

  
  <!-- Page content -->
  <div class="content">
    <%- body %> <!-- This is where the page content will be injected -->
  </div>

  <!-- Common Footer -->
   <!-- Footer -->
   <footer>
    <div class="footer continer mt-5 ">
        <p>&copy; 2024 Your Website. All rights reserved.</p>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>
</html>
